@model WebApplication1.Models.CustomerModel
<form class="form-horizontal" action="/@(Model.id ==null ? "create" : "edit/"+Model.id?.ToString())" method="post">
    <input type="hidden" name="id" value="@Model.id?.ToString()"/>
    <div class="form-group ">
        <label class="control-label col-sm-4">First Name</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.firstname)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Last Name</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.lastname)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Email</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.email)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Phone Number</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.phone_number)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Country Code</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.country_code)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Gender</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.gender)
        </div>
    </div>
    <div class="form-group">
        <label class="control-label col-sm-4">Balance</label>
        <div class="col-sm-8">
            @Html.TextBoxFor(m => m.balance)
        </div>
    </div>
    @*<div class="form-group">
            <label for="exampleInputPassword1">Password</label>
            <input type="password" class="form-control" id="exampleInputPassword1" placeholder="Password">
        </div>*@
    <button type="submit" class="btn btn-primary">Submit</button>
</form>
